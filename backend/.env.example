# Backend Environment Variables
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=5000

# Database Configuration
# For SQLite (development)
DATABASE_URL="file:./dev.db"
# For PostgreSQL (production)
# DATABASE_URL="postgresql://username:password@localhost:5432/sanjeevani_db"

# Encryption Keys
# Generate new keys using: openssl rand -base64 32
# You need at least one key, can have multiple for key rotation
SANJEEVANI_ENC_KEYS=your_base64_encryption_key_here,optional_second_key_here

# Firebase Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id

# Firebase Service Account
# Option 1: JSON string (for deployment platforms like Vercel/Netlify)
# FIREBASE_SERVICE_ACCOUNT_JSON='{"type":"service_account","project_id":"your-project",...}'

# Option 2: Local file path (for local development)
# FIREBASE_SERVICE_ACCOUNT_PATH=./path/to/your/firebase-service-account.json

# Optional: Node Environment
NODE_ENV=development